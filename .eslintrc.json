{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "double"],
        "max-len": [
            "error",
            {
                "ignoreComments": true,
                "ignoreStrings": true,
                "ignoreUrls": true,
                "ignoreTemplateLiterals": true
            }
        ]
    }
}
